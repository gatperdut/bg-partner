{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@chitin/*": ["src/chitin/*"],
      "@config/*": ["src/config/*"],
      "@const/*": ["src/const/*"],
      "@entities/*": ["src/entities/*"],
      "@memread/*": ["src/memread/*"],
      "@memscan/*": ["src/memscan/*"],
      "@reqs/*": ["src/reqs/*"],
      "@shortcuts/*": ["src/shortcuts/*"],
      "@sprite/*": ["src/sprite/*"],
      "@syscalls/*": ["src/syscalls/*"],
      "@tables/*": ["src/tables/*"],
      "@time/*": ["src/time/*"],
      "@views/*": ["src/views/*"],
      "@window/*": ["src/window/*"],
      "@handlers": ["src/handlers"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/**/*.ts"]
}
