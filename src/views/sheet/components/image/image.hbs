<img
  class="image {{#if tooltipHtml}}heartbeat cursor-pointer{{/if}}"
  {{#if tooltipHtml}}
    data-tippy-content="{{tooltipHtml}}"
  {{/if}}
  draggable="false"
  src="data:image/png;base64,{{base64}}"
  style="width: {{width}}px; height: {{height}}px; left: calc(50% - {{halign}}px); top: calc(50% - {{valign}}px);"
  title="{{title}}"
/>
